@page
@model ProblemListModel
@{
    ViewData["Title"] = "Problem List";
}

<div class="bg-secondary bg-opcity-10 py-2 mb-5">
    <div class="container">
        <h1 class="display-4">Available Problems</h1>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td><b>#</b></td>
                <td><b>Description</b></td>
                <td><b>Config</b></td>
            </tr>
        </thead>
        <tbody>
            @{
                int rowNo = 0;
            }
            @foreach (var kvp in Model.Configs!)
            {
                <tr>
                    <td>
                        <form method="post" asp-page-handler="start" asp-route-problemkey="@kvp.Key">
                            <button class="btn btn-primary">@(rowNo += 1)</button>
                        </form>
                    </td>
                    <td>@kvp.Value.Description</td>
                    <td>@kvp.Value.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>